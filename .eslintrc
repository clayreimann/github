{
   "extends": "eslint:recommended",

   "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

   "rules": {
      "no-bitwise": 1,
      "eqeqeq": 2,
      "guard-for-in": 2,
      "no-extend-native": 2
   },

   "env": {
      "browser": true,
      "node": true
   },

   "globals": {
      "require": false,
      "define": false,
      "escape": false
   }
}
